<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.RegistrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:2"
        android:weightSum="4"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitStart"
            android:src="@drawable/auth_top_background"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="46sp"
            android:text="Oggetto"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/main_font_bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Регистрация"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Имя"/>
        <EditText
            android:id="@+id/LastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:layout_marginBottom="7dp"
            android:textSize="22sp"
            android:textColor="@color/main_background"
            android:fontFamily="@font/main_font_medium"
            android:maxLines="1"
            android:paddingVertical="7dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:autofillHints="no"
            android:textColorHint="@color/gray"
            android:background="@drawable/input_email_background"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Фамилия"/>
        <EditText
            android:id="@+id/FirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фамилия"
            android:layout_marginBottom="7dp"
            android:textSize="22sp"
            android:textColor="@color/main_background"
            android:fontFamily="@font/main_font_medium"
            android:maxLines="1"
            android:paddingVertical="7dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:autofillHints="no"
            android:textColorHint="@color/gray"
            android:background="@drawable/input_email_background"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Дата рождения"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_background"
            app:cardCornerRadius="6dp"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="7dp"
            app:contentPadding="7dp">
            <TextView
                android:id="@+id/selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/main_font_regular"
                android:textColor="@color/black"
                android:text="20.10.2022"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Предпочтительное время"/>
        <EditText
            android:id="@+id/timePreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="40"
            android:layout_marginBottom="7dp"
            android:textSize="22sp"
            android:textColor="@color/main_background"
            android:fontFamily="@font/main_font_medium"
            android:maxLines="1"
            android:paddingVertical="7dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:inputType="number"
            android:autofillHints="no"
            android:textColorHint="@color/gray"
            android:background="@drawable/input_email_background"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Обо мне"/>
        <EditText
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Улыбчивый парень"
            android:layout_marginBottom="7dp"
            android:textSize="22sp"
            android:textColor="@color/main_background"
            android:fontFamily="@font/main_font_medium"
            android:maxLines="1"
            android:paddingVertical="7dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:autofillHints="no"
            android:textColorHint="@color/gray"
            android:background="@drawable/input_email_background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Должность"/>
        <Spinner
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/main_font_regular"
            android:textColor="@color/black"
            android:text="Тэги"/>
        <ListView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_background"
            app:cardCornerRadius="6dp"
            android:layout_gravity="start"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="7dp"
            app:contentPadding="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/main_font_regular"
                android:textColor="@color/black"
                android:text="Выбрать фото"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/registrationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/main_background"
            android:textColor="@color/white"
            android:text="@string/registration"
            android:fontFamily="@font/main_font_bold"
            android:textSize="18sp"/>

    </LinearLayout>

    </ScrollView>

</FrameLayout>